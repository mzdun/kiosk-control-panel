# GNU Makefile based on shared rules provided by the Native Client SDK.
# See README.Makefiles for more details.

VALID_TOOLCHAINS := pnacl glibc clang-newlib linux
NACL_SDK_ROOT ?= $(abspath $(CURDIR)/../..)

TARGET = ppapi_cpp_private

include $(NACL_SDK_ROOT)/tools/common.mk

LIBS = $(DEPS)

CFLAGS = -Wall
SOURCES = ext_crx_file_system_private.cc \
  file_io_private.cc \
  host_resolver_private.cc \
  isolated_file_system_private.cc \
  net_address_private.cc \
  output_protection_private.cc \
  pass_file_handle.cc \
  tcp_server_socket_private.cc \
  tcp_socket_private.cc \
  udp_socket_private.cc \
  uma_private.cc \
  x509_certificate_private.cc


all: install

# Build rules generated by macros from common.mk:

$(foreach src,$(SOURCES),$(eval $(call COMPILE_RULE,$(src),$(CFLAGS))))
$(eval $(call LIB_RULE,ppapi_cpp_private,$(SOURCES)))
ifneq (,$(findstring $(TOOLCHAIN),glibc))
$(eval $(call SO_RULE,ppapi_cpp_private,$(SOURCES),$(LIBS),$(DEPS)))
endif

